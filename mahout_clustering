bin/mahout seqdirectory -c UTF-8 -i topics -o topics-seqfiles
bin/mahout seq2sparse -i topics-seqfiles -o topics-vectors -ow

bin/mahout seq2sparse -i topics-seqfiles -o topics-vectors-bigram -ow -chunk 200 -wt tfidf -s 5 -md 3 -x 90 -ng 2 -ml 50 -seq

bin/mahout kmeans -i topics-vectors-bigram/tfidf-vectors -c topics-kmeans-clusters -o topics-kmeans -dm org.apache.mahout.common.distance.SquaredEuclideanDistanceMeasure -cd 1.0 -k 20 -x 10 -ow --clustering

bin/mahout clusterdump -i topics-kmeans/clusters-1-final -o topics_clusters_dump -d topics-vectors-bigram/dictionary.file-0 -dt sequencefile -b 100 -n 10 --evaluate -dm org.apache.mahout.common.distance.SquaredEuclideanDistanceMeasure -sp 0 --pointsDir topics-kmeans/clusteredPoints

bin/mahout seqdumper -i topics-kmeans/clusteredPoints -o topics_seq_dump
